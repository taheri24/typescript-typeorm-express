{
    "compilerOptions": {
          
         "lib":[
             "es2019"

         ],
        "baseUrl": "./",
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {             
            "@lib":["src/lib"],
            "@queries":["src/queries"],
            "@entities":["src/entities"],
            "@app-gallery":["src/app-gallery"]
        },
        "target": "es2019",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop":true,
        "types":["node"],
        "typeRoots":[
            "node_modules/@types",
            "types"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
